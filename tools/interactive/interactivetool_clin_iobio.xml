<tool id="interactive_tool_clin_iobio" tool_type="interactive" name="clin.iobio visualisation" version="v3.2.4">
    <requirements>
	    <container type="docker">clintest</container>
        <!--<container type="docker">whoisdonlee/iobio_container:main</container>-->
    </requirements>
    <entry_points>
        <entry_point name="Clin io.bio visualisation" requires_domain="True">
            <port>4030</port>
            <url><![CDATA[
/?gene=PDHA1&
genes=${genes}&species=Human&build=${refgen_version}&affectedSibs=&unaffectedSibs=&rel0=proband&sex0=${proband_sex}&vcf0=${proband_vcf}&tbi0=${proband_vcf}&bam0=${proband_bam}&bai0=${proband_bam}&sample0=proband&affectedStatus0=${proband_affected}&rel1=father&sex1=male&vcf1=${input_type.father.vcf}&tbi1=${input_type.father.vcf}&bam1=${input_type.father.bam}&bai1=${input_type.father.bam}&sample1=father&affectedStatus1=${input_type.father.affected}&rel2=mother&sex2=female&vcf2=${input_type.mother.vcf}&tbi2=${input_type.mother.vcf}&bam2=${input_type.mother.bam}&bai2=${input_type.mother.bam}&sample2=mother&affectedStatus2=${input_type.mother.affected}
            ]]></url>
            <!--<url>/</url>-->
        </entry_point>
    </entry_points>
